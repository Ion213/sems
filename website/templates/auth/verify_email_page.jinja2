<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='js_lib/bootstrap5.3/css/bootstrap.min.css') }}">
    
    <link rel="icon" href="{{ url_for('static', filename='logo/dtc.png') }}" type="image/png">

    <link rel="stylesheet" href="{{ url_for('static', filename='css/auth/verify_email_page.css') }}">

</head>
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="card">
            <div class="card-header">
                Email Verification
            </div>
            <div class="card-body text-center">
                
                
                {% if success %}
                <strong class="message text-success">{{ message }}</strong>
                <br><br>
                    <a href="{{ url_for('login.login_page') }}" class="btn btn-primary btn-lg w-100 mt-3">
                        Proceed to Login
                    </a>
                {% else %}
                <strong class="message text-danger">{{ message }}</strong>
                <br><br>
                    
                    
                    <form action="{{ url_for('verify_email.resend_verification_email') }}" method="post" class="mt-3">
                        <div class="input-group mb-3">
                            <input type="email" name="email" value="{{ email }}" class="form-control form-control-lg" placeholder="Email" required>
                            <button type="submit" class="btn btn-primary">
                                Resend Link
                            </button>
                        </div>
                    </form>
                    <div class="d-grid gap-2 mb-3">
                        <a href="{{ url_for('login.login_page') }}" class="btn btn-light btn-lg">
                            Go to Login Page
                        </a>
                        <a href="{{ url_for('signup.signup_page') }}" class="btn btn-light btn-lg">
                            Go to Sign Up Page
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</body>
</html>